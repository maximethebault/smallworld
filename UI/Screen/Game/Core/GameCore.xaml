<UserControl x:Class="UI.Screen.Game.Core.GameCore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:UI"
             xmlns:core="clr-namespace:UI.Screen.Game.Core"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Name="GameCoreControl">
    <DockPanel DataContext="{Binding ElementName=GameCoreControl}">
        <Grid Name="MapGrid" Background="White">
            <Rectangle Name="SelectionRectangle" />
            <ListBox HorizontalContentAlignment="Stretch">
                <core:MapView Game="{Binding Game}"  Tiles="{Binding Tiles}"></core:MapView>
            </ListBox>
        </Grid>
    </DockPanel>
</UserControl>
