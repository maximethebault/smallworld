<UserControl x:Class="UI.Screen.Home.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="300" Width="300">
    <StackPanel VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,0" FontWeight="Bold" FontSize="40">Small World</TextBlock>
        <Button Content="Nouvelle partie" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="150" Click="New_Game"/>
        <Button Content="Charger une partie" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="150" Click="Load_Game"/>
        <Button Content="Quitter le jeu" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Width="150" Click="Exit"/>
    </StackPanel>
</UserControl>
